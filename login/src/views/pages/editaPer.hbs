<body>
	<div class="container w-75 px-5 pb-5 my-5">
		<div class="row">
			<div class="col">
				<h1 class="fw-bold text-center pt-5 mb-5"> Edicion de personal </h1>
				{{#each per}}
				<form class="form" action="/editar/{{idUser}}" method="post">


					<div class=" mb-4">
						<label for="apPaterno" class="form-label"> Apellido paterno </label>
						<input requiered value="{{apPaterno}}" type="text" id="apPaterno" name="apPaterno"
							class="form-control text-bg-light" placeholder="apellido paterno" pattern="[A-Za-z]*" minlength="4"
							maxlength="40">
					</div>

					<div class="mb-4">
						<label for="apMaterno" class="form-label"> Apellido materno </label>
						<input requiered value="{{apMaterno}}" type="text" id="apMaterno" name="apMaterno"
							class="form-control text-bg-light" placeholder="apellido materno" pattern="[A-Za-z]*" minlength="4"
							maxlength="40">
					</div>

					<div class="mb-4">
						<label for="nombre" class="form-label"> Nombre </label>
						<input requiered value="{{nombre}}" type="text" id="nombre" name="nombre" class="form-control text-bg-light"
							placeholder="ingresa tu o tus nombres" pattern="[A-Za-z]*" minlength="3" maxlength="30">
					</div>

					<div class="mb-4">
						<label for="fechaNacimiento" class="form-label"> Fecha de nacimiento </label>
						<input requiered value="{{fechaNacimiento}}" type="date" id="date" name="fechaNacimiento"
							class="form-control text-bg-light" placeholder="1990/01/01" min="1960-12-31" max="2010-12-31">
					</div>

					<div class="mb-4">
						<label for="telefono" class="form-label"> Número de teléfono </label>
						<input requiered value="{{telefono}}" type="tel" id="tel" name="telefono" class="form-control text-bg-light"
							placeholder="4490000000" minlength="10" maxlength="10">
					</div>

					<div class="mb-4">
						<label for="email" class="form-label"> Email </label>
						<input requiered value="{{email}}" type="email" id="email" name="email" class="form-control text-bg-light"
							placeholder="ejemplo@email.com" minlength="0" maxlength="50">
					</div>

					<div class="mb-4">
						<label for="password" class="form-label"> Contraseña </label>
						<input requiered value="{{password}}" type="password" id="password" name="password"
							class="form-control text-bg-light" placeholder="••••••••" minlength="8" maxlength="25">
					</div>

					{{#if error}}
					<p style="color: red;">{{error}}</p>
					{{/if}}

					<div class="d-grid">
						<button type="submit" class="btn"> Guardar cambios </button>
					</div>


				</form>
			</div>
		</div>
	</div>
</body>

</html>