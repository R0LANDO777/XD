<style>.card{ width: 400px; border:none; } .btr{
  border-top-right-radius: 5px !important; } .btl{ border-top-left-radius: 5px
  !important; } .btn-dark { color: #fff; background-color: #0d6efd;
  border-color: #0d6efd; } .btn-dark:hover { color: #fff; background-color:
  #0d6efd; border-color: #0d6efd; } .nav-pills{ display:table !important;
  width:100%; } .nav-pills .nav-link { border-radius: 0px; border-bottom: 1px
  solid #0d6efd40; } .nav-item{ display: table-cell; background: #0d6efd2e; }
  .form{ padding: 10px; height: 300px; } .form input{ margin-bottom: 12px;
  border-radius: 3px; } .form input:focus{ box-shadow: none; } .form button{
  margin-top: 20px; } .tab-content{ padding-bottom: 150px; }
</style>

<div class="d-flex justify-content-center align-items-center mt-5">

  <div class="card">

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item text-center">
        <a
          class="nav-link btr"
          id="pills-profile-tab"
          data-toggle="pill"
          href="#pills-profile"
          role="tab"
          aria-controls="pills-profile"
          aria-selected="false"
        >Edit</a>
      </li>

    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div
        class="tab-pane fade show active"
        id="pills-home"
        role="tabpanel"
        aria-labelledby="pills-home-tab"
      >
      <h3>Personal</h3>
        {{#each per}}
        <form class="form px-4 pt-5" action="/editar/{{idUser}}" method="post">

          <input
            value="{{apPaterno}}"
            type="text"
            name="apPaterno"
            class="form-control"
            placeholder="Apellido Paterno"
            maxlength="25"
            required
          />

          <input
            value="{{apMaterno}}"
            type="text"
            name="apMaterno"
            class="form-control"
            placeholder="Apellido Materno"
            maxlength="25"
            required
          />

          <input
            value="{{nombre}}"
            type="text"
            name="nombre"
            class="form-control"
            placeholder="Nombre o nombres"
            maxlength="25"
            required
          />

          <input
            value="{{telefono}}"
            name="telefono"
            type="tel"
            class="form-control"
            placeholder="Numero de telefono"
            title="Pon un numero de telefono con 10 digitos"
            pattern="[0-9]{10}"
            minlength="10"
            maxlength="10"
            required
          />

          <input
            value="{{email}}"
            type="email"
            name="email"
            class="form-control"
            placeholder="Email"
            maxlength="50"
            required
          />

          <input
          style="font-size: 12px;"
            type="password"
            name="password"
            class="form-control"
            placeholder="Si no se requiere cambiar la contraseÃ±a deje este campo vacio"
            maxlength="16"
          />

          <input type="hidden" name="rol", value="p">

          {{#if error}}

            <p style="color: red;">{{error}}</p>

          {{/if}}

          <button class="btn btn-dark btn-block">Edit</button>

        </form>
        {{/each}}

      </div>

    </div>

  </div>

</div>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"
></script>