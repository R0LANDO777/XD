<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
		crossorigin="anonymous"></script>
	<title>Document</title>
</head>


<style>
	body {
		background: rgb(82, 82, 82);
		background: radial-gradient(circle, rgb(82, 82, 82) 0%, rgb(51, 59, 53) 100%);
	}

	.container {
		background-color: rgb(94, 94, 94)
	}

	a {
		text-decoration: none;
		color: rgb(255, 208, 0);
	}

	h1 {
		color: rgb(255, 255, 255);
	}

	span,
	label {
		color: rgb(211, 211, 211);
	}

	.btn {
		background-color: rgb(255, 115, 0);
		color: rgb(255, 255, 255);
	}
</style>



<script src="/src/public/js/script"></script>


<body>



	<!-- PANTALLAS DE LOGIN Y REGISTRO -->

	<div class="tab-content" id="pills-tabContent">
		<!-- MENU DE SELECCION -->
		<div class="container w-50 mt-5 py-3">

			<ul class="nav nav-pills">
				<li class="nav-item">
					<button class="btn" data-toggle="pill" href="#pills-login"> Iniciar sesión </button>
				</li>
				<br>
				<li>
					<button class="btn" data-toggle="pill" href="#pills-register"> Crear cuenta </button>
				</li>
			</ul>
		</div>


		<!-- LOGIN -->
		<div class="tab-pane" id="pills-login" role="tabpanel" aria-labelledby="pills-home-tab">
			<div class="container w-50 px-5 pb-5 mb-5">
				<div class="row">
					<div class="col">
						<h1 class="fw-bold text-center pt-5 mb-5"> ¡Hola de nuevo! </h1>

						<!-- Formulario de login -->
						<form class="form" action="/entrar" method="post">


							<div class="mb-4">
								<label for="email" class="form-label"> email </label>
								<input requiered type="email" name="email" class="form-control text-bg-light"
									placeholder="ejemplo@cetis155.edu.mx" minlength="5" maxlength="50">
							</div>

							<div class="mb-4">
								<label for="password" class="form-label"> contraseña </label>
								<input requiered type="password" name="password" class="form-control text-bg-light"
									placeholder="••••••••" minlength="8" maxlength="25">
							</div>

							{{#if errors}}
							<p>{{errors}}</p>
							{{/if}}

							<div class="d-grid">
								<button type="submit" class="btn"> iniciar sesión </button>
							</div>


						</form>
					</div>
				</div>
			</div>
		</div>


		<!-- REGISTRO -->
		<div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="pills-profile-tab">
			<div class="container w-50 px-5 pb-5 mb-5">
				<div class="row">
					<div class="col">
						<h1 class="fw-bold text-center pt-5 mb-5"> ¡Te damos la bienvenida! </h1>
						<form class="form px-4" action="/registra" method="post" onsubmit="return validar ();">


							<div class="mb-4">
								<label for="apPaterno" class="form-label"> Apellido paterno </label>
								<input requiered type="text" id="apPaterno" name="apPaterno" class="form-control text-bg-light"
									placeholder="apellido paterno" pattern="[A-Za-z]*" minlength="4" maxlength="40">
							</div>

							<div class="mb-4">
								<label for="apMaterno" class="form-label"> Apellido materno </label>
								<input requiered type="text" id="apMaterno" name="apMaterno" class="form-control text-bg-light"
									placeholder="apellido materno" pattern="[A-Za-z]*" minlength="4" maxlength="40">
							</div>

							<div class="mb-4">
								<label for="nombre" class="form-label"> Nombre </label>
								<input requiered type="text" id="nombre" name="nombre" class="form-control text-bg-light"
									placeholder="ingresa tu o tus nombres" pattern="[A-Za-z]*" minlength="3" maxlength="30">
							</div>

							<div class="mb-4">
								<label for="fechaNacimiento" class="form-label"> Fecha de nacimiento </label>
								<input requiered type="date" id="date" name="fechaNacimiento" class="form-control text-bg-light"
									min="1960-12-31" max="2010-12-31">
							</div>

							<div class="mb-4">
								<label for="telefono" class="form-label"> Número de teléfono </label>
								<input requiered type="tel" id="tel" name="telefono" class="form-control text-bg-light"
									placeholder="4490000000" minlength="10" maxlength="10">
							</div>

							<div class="mb-4">
								<label for="email" class="form-label"> Email </label>
								<input requiered type="email" id="email" name="email" class="form-control text-bg-light"
									placeholder="ejemplo@cetis155.edu.mx" minlength="0" maxlength="50">
							</div>

							<div class="mb-4">
								<label for="password" class="form-label"> Contraseña </label>
								<input requiered type="password" id="password" name="password" class="form-control text-bg-light"
									placeholder="••••••••" minlength="8" maxlength="25">
							</div>

							{{#if error}}
							<p style="color: red;">{{error}}</p>
							{{/if}}

							<div class="d-grid">
								<button type="submit" class="btn"> Crear cuenta </button>
							</div>


						</form>
					</div>
				</div>
			</div>
		</div>

	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/js/validacion.js"></script>

</body>

</html>